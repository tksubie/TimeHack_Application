<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeHack" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">@color/splashBackground</item>

        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorGray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <!-- Customize theme here. -->

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
        <!-- Theme for Splash screen -->
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/splashBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/timehack_logo</item>
        <!-- Time for Splash screen -->
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">2000</item>
        <!-- Always have the logo displayed on splashscreen -->
        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi">icon_preferred</item>

        <!-- To change the background of options menu-->


    </style>

    <style name="Theme.TimeHack.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">@color/splashBackground</item>

        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorGray</item>

        <!-- Customize theme here. -->

        <!-- Theme for Splash screen -->
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/splashBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/timehack_logo</item>
        <!-- Time for Splash screen -->
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">2000</item>
        <!-- Always have the logo displayed on splashscreen -->
        <item name="android:windowSplashScreenBehavior" tools:ignore="NewApi">icon_preferred</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

    </style>
    <style name="Theme.TimeHack.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TimeHack.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerItemStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>