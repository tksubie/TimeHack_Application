<resources>
    <!-- Base application theme. -->
    <style name="Theme.TimeHack" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">#285C22</item>

        <item name="android:textColor">#ffffff</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorGray</item>

        <!-- To change the background of options menu-->
        <item name="android:actionOverflowMenuStyle">@style/OptionsMenu</item>
    </style>

    <style name="OptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/splashBackground</item>
    </style>
    <style name="Theme.TimeHack.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">@color/splashBackground</item>

        <item name="android:textColor">#ffffff</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorGray</item>


        <!-- To change the background of options menu-->
        <item name="android:actionOverflowMenuStyle">@style/OptionsMenu</item>
    </style>

</resources>