<resources>
    <!-- Base application theme. -->
    <style name="Theme.TimeHack" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">#285C22</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorGray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <!-- To change the background of options menu-->
        <item name="android:actionOverflowMenuStyle">@style/OptionsMenu</item>
        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="OptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/splashBackground</item>
    </style>

    <style name="Theme.TimeHack.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">@color/splashBackground</item>

        <item name="android:textColor">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

        <!-- To change the background of options menu-->
        <item name="android:actionOverflowMenuStyle">@style/OptionsMenu</item>
    </style>


    <style name="spinnerItemStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>