<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for the info screen -->


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#435943"
    tools:context=".ui.info.InfoFragment">


    <Button
        android:id="@+id/button3"
        android:layout_width="321dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/textbox"
        android:clickable="true"
        android:contentDescription="@string/sincgars_pocket_guide_tm_pdf"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482"
        tools:ignore="MissingConstraints,TextSizeCheck,VisualLintButtonSize" />

    <TextView
        android:id="@+id/pdf3"
        android:layout_width="262dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:text="@string/tm_11_5820_890_10_7_ncs_pocket_guide"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3"
        tools:ignore="TextSizeCheck,VisualLintButtonSize,VisualLintOverlap" />

    <TextView
        android:id="@+id/pdf2"
        android:layout_width="262dp"
        android:layout_height="30dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/tm_11_5820_890_10_3_sincgars_operation_manual"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.271"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintVertical_bias="0.571"
        tools:ignore="TextSizeCheck,VisualLintButtonSize,VisualLintOverlap,TextContrastCheck" />

    <TextView
        android:id="@+id/heading_pocket_guide"
        android:layout_width="321dp"
        android:layout_height="34dp"
        android:text="@string/sincgars_pocket_guide"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/greyAccent"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/pdf1"
        android:layout_width="262dp"
        android:layout_height="30dp"
        android:text="@string/quickhelp_faqs"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/pdfView1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintVertical_bias="0.464"
        tools:ignore="SpUsage,TextSizeCheck,VisualLintButtonSize,VisualLintOverlap" />

    <Button
        android:id="@+id/button2"
        android:layout_width="321dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/textbox"
        android:clickable="true"
        android:contentDescription="@string/sincgars_tm_pdf"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326"
        tools:ignore="MissingConstraints,TextSizeCheck,VisualLintButtonSize,VisualLintOverlap" />

    <ImageView
        android:id="@+id/pdfView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pdf_icon"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pdf2"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintVertical_bias="0.571"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/headerIcon"
        android:layout_width="159dp"
        android:layout_height="92dp"
        android:contentDescription="@string/header_icon_for_info_help"
        android:src="@drawable/icons8_user_manual_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/button1"
        android:layout_width="321dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/textbox"
        android:clickable="true"
        android:contentDescription="@string/quickhelp_pdf"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188"
        tools:ignore="MissingConstraints,TextSizeCheck,VisualLintButtonSize" />

    <ImageView
        android:id="@+id/pdfView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/pdf_icon"
        app:layout_constraintBottom_toBottomOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintVertical_bias="0.464"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/heading_operation"
        android:layout_width="321dp"
        android:layout_height="33dp"
        android:textStyle="bold"
        android:text="@string/sincgars_operation_tm"
        android:textAlignment="center"
        android:textColor="@color/greyAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <ImageView
        android:id="@+id/pdfView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/pdf_icon"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/pdf3"
        app:layout_constraintTop_toTopOf="@+id/button3"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="208dp"
        android:layout_height="132dp"
        android:contentDescription="@string/logo_for_notes_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/websiteClick"
        app:layout_constraintVertical_bias="0.221"
        app:srcCompat="@drawable/timehack_logo"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/websiteDes"
        android:layout_width="319dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:contextClickable="false"
        android:text="@string/to_search_for_other_needed_technical_manuals_on_the_army_publishing_directorate"
        android:textAlignment="center"
        android:textColor="@color/greyAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/websiteClick"
        android:layout_width="247dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textbox"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:linksClickable="true"
        android:textStyle="bold"
        android:text="@string/click_here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/websiteDes"
        tools:ignore="TextSizeCheck,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>

